<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mysite.sbbmybatis.message.MessageMapper">
	<select id="getMessageById" resultType="com.mysite.sbbmybatis.dto.Message">
		SELECT id, message FROM hello WHERE id = #{id};
	</select>
	<select id="getMessagesLimit10" resultType="com.mysite.sbbmybatis.dto.Message">
		SELECT id, message FROM hello ORDER BY id DESC LIMIT 10;
	</select>
	<select id="getMessagesWithPaging" resultType="com.mysite.sbbmybatis.dto.Message">
        SELECT * FROM hello ORDER BY id DESC LIMIT #{size} OFFSET #{offset};
    </select>
    <select id="countTotal" resultType="Integer">
    	SELECT COUNT(*) FROM hello;
    </select>
	<insert id="insertMessage" parameterType="com.mysite.sbbmybatis.dto.Message">
		INSERT INTO hello (message) VALUES (#{message});
	</insert>
</mapper>